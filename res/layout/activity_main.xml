<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aravind.android.flashlight.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000"
        android:id="@+id/l1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warning: Over usage may kill flash light LED "
            android:textColor="#FFF"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="100dp"
                android:text="-"
                android:id="@+id/bmin"
                android:onClick="fmin"
                android:textSize="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000.0"
                android:id="@+id/cal"
                android:inputType="numberDecimal"
                android:textColor="#fff"
                android:textSize="30dp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="100dp"
                android:text="+"
                android:onClick="fadd"
                android:id="@+id/badd"
                android:textSize="30dp"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:onClick="ftor"
            android:src="@drawable/temp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="db display"
            android:visibility="invisible"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/a"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b"
                android:layout_margin="5dp"
                android:src="@drawable/n"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/c"
                android:layout_margin="5dp"
                android:src="@drawable/f"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d"
                android:layout_margin="5dp"
                android:src="@drawable/j"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e"
                android:layout_margin="5dp"
                android:src="@drawable/d"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f"
                android:layout_margin="5dp"
                android:src="@drawable/k"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/g"
                android:layout_margin="5dp"
                android:src="@drawable/g"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/h"
                android:layout_margin="5dp"
                android:src="@drawable/b"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/i"
                android:layout_margin="5dp"
                android:src="@drawable/h"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/j"
                android:layout_margin="5dp"
                android:src="@drawable/l"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/k"
                android:layout_margin="5dp"
                android:src="@drawable/e"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l"
                android:layout_margin="5dp"
                android:src="@drawable/m"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/m"
                android:layout_margin="5dp"
                android:src="@drawable/o"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n"
                android:layout_margin="5dp"
                android:src="@drawable/c"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="28dp"
            android:id="@+id/tv"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Turn on flashbeat"
                android:background="#0000ff"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:id="@+id/chkbox"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Multicolor party display"
                android:background="#ffff00"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:id="@+id/chkbox1"/>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
